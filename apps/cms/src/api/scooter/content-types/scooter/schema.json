{
  "kind": "collectionType",
  "collectionName": "scooters",
  "info": {
    "singularName": "scooter",
    "pluralName": "scooters",
    "displayName": "Scooter",
    "description": "Scutere 125cc pentru B125"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "tagline": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "priceMax": {
      "type": "decimal"
    },
    "listingImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "mainImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "engine": {
      "type": "string",
      "required": true
    },
    "power": {
      "type": "string",
      "required": true
    },
    "consumption": {
      "type": "string",
      "required": true
    },
    "weight": {
      "type": "string",
      "required": true
    },
    "seatHeight": {
      "type": "string",
      "required": true
    },
    "storage": {
      "type": "string",
      "required": true
    },
    "features": {
      "type": "json",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": ["urban", "sport", "premium"],
      "required": false
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "scooters"
    },
    "manufacturer": {
      "type": "enumeration",
      "enum": ["Honda", "Yamaha", "Suzuki", "Sym", "Kymco", "Daytona", "Piaggio", "Aprilia", "Royal Enfield", "SWM"],
      "required": true
    },
    "badge": {
      "type": "string"
    },
    "showOnHomepage": {
      "type": "boolean",
      "default": false
    },
    "colors": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::scooter-color.scooter-color",
      "mappedBy": "scooter"
    }
  }
}

